cp *$EMPLY*/split-*.pdf $SDRVBOL 
mv $HOME/$DPBX/$CPYNAME/Drivers/$SDRVBOL  $HOME/$DPBX/$CPYNAME/Splits/
fi
sh $HOME/.local/share/YTTS/bin/YTTS-rsync
